@model DBFirstApproachCRUD_OprationMVC.Models.STUDENTSEF

@{
    ViewBag.Title = "Student Details";
}

<h2 class="text-center my-4">Student Details</h2>

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Details of @Model.NAME</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <label class="col-sm-2 font-weight-bold">ID:</label>
                <div class="col-sm-10">
                    <p class="form-control-plaintext">@Model.ID</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 font-weight-bold">Name:</label>
                <div class="col-sm-10">
                    <p class="form-control-plaintext">@Model.NAME</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 font-weight-bold">Gender:</label>
                <div class="col-sm-10">
                    <p class="form-control-plaintext">@Model.GENDER</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 font-weight-bold">Age:</label>
                <div class="col-sm-10">
                    <p class="form-control-plaintext">@Model.AGE</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 font-weight-bold">Standard:</label>
                <div class="col-sm-10">
                    <p class="form-control-plaintext">@Model.STANDARD</p>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>