@model DBFirstApproachCRUD_OprationMVC.Models.STUDENTSEF

@{
    ViewBag.Title = "Delete Student";
}

<h2 class="text-center my-4 text-danger">Delete Student</h2>

<div class="container">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Are you sure you want to delete this record?</h4>
        </div>
        <div class="card-body">
            <h5 class="text-center mb-4">Details of <strong>@Model.NAME</strong></h5>
            <dl class="row">
                <dt class="col-sm-4 text-end font-weight-bold">Name:</dt>
                <dd class="col-sm-8">@Model.NAME</dd>

                <dt class="col-sm-4 text-end font-weight-bold">Gender:</dt>
                <dd class="col-sm-8">@Model.GENDER</dd>

                <dt class="col-sm-4 text-end font-weight-bold">Age:</dt>
                <dd class="col-sm-8">@Model.AGE</dd>

                <dt class="col-sm-4 text-end font-weight-bold">Standard:</dt>
                <dd class="col-sm-8">@Model.STANDARD</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <button type="submit" class="btn btn-danger mx-2">Delete</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary mx-2" })
            }
        </div>
    </div>
</div>
